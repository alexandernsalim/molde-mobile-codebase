<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_add_discussion"
            style="@style/RegularButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buat Diskusi Baru"
            android:textSize="9pt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_discussion_cond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum ada diskusi"
            android:textSize="8pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_add_discussion" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_discussions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bt_add_discussion" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

